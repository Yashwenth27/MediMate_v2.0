<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient from black to green -->
    <gradient
        android:startColor="#B4F86F"
        android:endColor="#B4F86F"
        android:angle="270" /> <!-- 270 = top-to-bottom -->

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional padding inside background -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
