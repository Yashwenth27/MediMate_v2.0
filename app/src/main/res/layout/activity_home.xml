<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/medimate_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/splash_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/splash_logo"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textSize="60dp"
        android:text="MediMate"
        android:gravity="center"/>

    <RelativeLayout
        android:id="@+id/splash_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/splash_text1"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Username"
        android:textColorHint="#4A4E47"
        android:gravity="center"
        android:layout_marginHorizontal="90dp"
        android:id="@+id/splash_username"
        app:layout_constraintTop_toBottomOf="@id/splash_border"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColorHint="#4A4E47"
        android:gravity="center"
        android:layout_marginHorizontal="90dp"
        android:id="@+id/splash_password"
        app:layout_constraintTop_toBottomOf="@id/splash_username"
        android:layout_marginVertical="20dp"/>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/splash_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/splash_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#59B100"
            android:text="Login !"
            android:textColor="@color/white"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/splash_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4A4E47"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:layout_marginStart="16dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Built by\nAbijith | Prem | Prasanna | Sridhar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>